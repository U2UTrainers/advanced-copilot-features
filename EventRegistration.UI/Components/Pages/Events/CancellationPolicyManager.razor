@using EventRegistration.UI.Services
@using EventRegistration.UI.Models
@inject EventRegistrationApiClient ApiClient
@rendermode InteractiveServer

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (policy == null)
{
    <div class="card">
        <div class="card-body text-center">
            <p class="text-muted">No cancellation policy defined for this event.</p>
            <button class="btn btn-primary" @onclick="CreateNewPolicy">
                <i class="bi bi-plus-circle"></i> Create Cancellation Policy
            </button>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            <h5>Cancellation Policy</h5>
        </div>
        <div class="card-body">
            @if (isEditing)
            {
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Full Refund Deadline (Days before event) *</label>
                        <input type="number" class="form-control" @bind="editModel.FullRefundDeadlineDays" />
                        <small class="text-muted">Number of days before event for full refund eligibility</small>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Partial Refund Deadline (Days before event) *</label>
                        <input type="number" class="form-control" @bind="editModel.PartialRefundDeadlineDays" />
                        <small class="text-muted">Number of days before event for partial refund eligibility</small>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">No Refund After (Days before event) *</label>
                        <input type="number" class="form-control" @bind="editModel.NoRefundAfterDays" />
                        <small class="text-muted">Number of days before event after which no refund is given</small>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Partial Refund Percentage *</label>
                        <input type="number" step="0.01" class="form-control" @bind="editModel.PartialRefundPercentage" />
                        <small class="text-muted">Percentage of refund for partial refunds (e.g., 50 for 50%)</small>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Cancellation Fee</label>
                        <input type="number" step="0.01" class="form-control" @bind="editModel.CancellationFee" />
                        <small class="text-muted">Fixed fee to deduct from refunds (optional)</small>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger mt-3">@errorMessage</div>
                }

                <div class="mt-3">
                    <button class="btn btn-primary" @onclick="SavePolicy" disabled="@isSubmitting">
                        @if (isSubmitting) { <span class="spinner-border spinner-border-sm me-2"></span> }
                        Save Policy
                    </button>
                    <button class="btn btn-secondary ms-2" @onclick="CancelEdit">Cancel</button>
                </div>
            }
            else
            {
                <dl class="row">
                    <dt class="col-sm-4">Full Refund Deadline:</dt>
                    <dd class="col-sm-8">@policy.FullRefundDeadlineDays days before event</dd>

                    <dt class="col-sm-4">Partial Refund Deadline:</dt>
                    <dd class="col-sm-8">@policy.PartialRefundDeadlineDays days before event</dd>

                    <dt class="col-sm-4">No Refund After:</dt>
                    <dd class="col-sm-8">@policy.NoRefundAfterDays days before event</dd>

                    <dt class="col-sm-4">Partial Refund Percentage:</dt>
                    <dd class="col-sm-8">@policy.PartialRefundPercentage%</dd>

                    <dt class="col-sm-4">Cancellation Fee:</dt>
                    <dd class="col-sm-8">
                        @if (policy.CancellationFee.HasValue)
                        {
                            <text>$@policy.CancellationFee.Value.ToString("F2")</text>
                        }
                        else
                        {
                            <text>None</text>
                        }
                    </dd>
                </dl>

                <div class="alert alert-info">
                    <h6>Refund Rules:</h6>
                    <ul class="mb-0">
                        <li><strong>Full Refund:</strong> Cancellations made @policy.FullRefundDeadlineDays+ days before the event receive a full refund@(policy.CancellationFee.HasValue ? $" minus ${policy.CancellationFee.Value:F2} fee" : "").</li>
                        <li><strong>Partial Refund:</strong> Cancellations made between @policy.PartialRefundDeadlineDays and @policy.FullRefundDeadlineDays days before the event receive @policy.PartialRefundPercentage% refund@(policy.CancellationFee.HasValue ? $" minus ${policy.CancellationFee.Value:F2} fee" : "").</li>
                        <li><strong>No Refund:</strong> Cancellations made less than @policy.NoRefundAfterDays days before the event receive no refund.</li>
                    </ul>
                </div>

                <div class="mt-3">
                    <button class="btn btn-primary" @onclick="StartEdit">
                        <i class="bi bi-pencil"></i> Edit Policy
                    </button>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public int EventId { get; set; }

    private CancellationPolicyResponse? policy;
    private bool isLoading = true;
    private bool isEditing;
    private bool isSubmitting;
    private string? errorMessage;
    private EditPolicyModel editModel = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadPolicy();
    }

    private async Task LoadPolicy()
    {
        isLoading = true;
        try
        {
            policy = await ApiClient.GetCancellationPolicyAsync(EventId);
        }
        catch
        {
            policy = null;
        }
        isLoading = false;
    }

    private void CreateNewPolicy()
    {
        editModel = new EditPolicyModel
        {
            FullRefundDeadlineDays = 30,
            PartialRefundDeadlineDays = 7,
            NoRefundAfterDays = 1,
            PartialRefundPercentage = 50m,
            CancellationFee = null
        };
        isEditing = true;
    }

    private void StartEdit()
    {
        if (policy != null)
        {
            editModel = new EditPolicyModel
            {
                FullRefundDeadlineDays = policy.FullRefundDeadlineDays,
                PartialRefundDeadlineDays = policy.PartialRefundDeadlineDays,
                NoRefundAfterDays = policy.NoRefundAfterDays,
                PartialRefundPercentage = policy.PartialRefundPercentage,
                CancellationFee = policy.CancellationFee
            };
        }
        isEditing = true;
        errorMessage = null;
    }

    private void CancelEdit()
    {
        isEditing = false;
        errorMessage = null;
    }

    private async Task SavePolicy()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            var request = new CreateCancellationPolicyRequest(
                editModel.FullRefundDeadlineDays,
                editModel.PartialRefundDeadlineDays,
                editModel.PartialRefundPercentage,
                editModel.NoRefundAfterDays,
                editModel.CancellationFee
            );

            if (policy == null)
            {
                await ApiClient.CreateCancellationPolicyAsync(EventId, request);
            }
            else
            {
                await ApiClient.UpdateCancellationPolicyAsync(EventId, request);
            }

            await LoadPolicy();
            isEditing = false;
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private class EditPolicyModel
    {
        public int FullRefundDeadlineDays { get; set; } = 30;
        public int PartialRefundDeadlineDays { get; set; } = 7;
        public int NoRefundAfterDays { get; set; } = 1;
        public decimal PartialRefundPercentage { get; set; } = 50m;
        public decimal? CancellationFee { get; set; }
    }
}
